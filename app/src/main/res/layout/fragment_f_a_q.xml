<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FAQFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/gradient_bg"
        android:id="@+id/faqConstraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageFaq"
            android:layout_width="123dp"
            android:layout_height="70dp"
            android:layout_marginStart="115dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="115dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_question_answer_24"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/textF"
            style="@style/TextAppearance.Kamatechs_App.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="57dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="56dp"
            android:text="Frequently Asked Questions"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageFaq" />

        <TextView
            android:id="@+id/textFAQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="189dp"
            android:fontFamily="@font/raleway_bold"
            android:text="What is Kamatechs?"
            android:textAlignment="viewStart"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textF" />

        <TextView
            android:id="@+id/textF1"
            android:layout_width="338dp"
            android:layout_height="126dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="23dp"
            android:fontFamily="@font/raleway"
            android:text="Kamatechs is a mobile application designed to monitor and display the temperature and humidity of the adaptive cooling storage for tomatoes. "
            android:textAlignment="viewStart"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textFAQ" />

        <TextView
            android:id="@+id/textF2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="63dp"
            android:fontFamily="@font/raleway_bold"
            android:text="How does the kamatechs works?"
            android:textAlignment="viewStart"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textF1" />

        <TextView
            android:id="@+id/textF3"
            android:layout_width="338dp"
            android:layout_height="145dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="23dp"
            android:fontFamily="@font/raleway"
            android:text="The application uses firebase which contains the data gathered from the sensors inside and outside the storage system. The application will fetch the data and display it through the application."
            android:textAlignment="viewStart"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textF2" />

        <TextView
            android:id="@+id/textF4"
            android:layout_width="330dp"
            android:layout_height="49dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="49dp"
            android:fontFamily="@font/raleway_bold"
            android:text="What are the benefits of using kamatechs?"
            android:textAlignment="viewStart"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textF3" />

        <TextView
            android:id="@+id/textF5"
            android:layout_width="338dp"
            android:layout_height="170dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="23dp"
            android:fontFamily="@font/raleway"
            android:text="With Kamatechs, Tomato Farmers will be able to know the status of their adaptive cooling storage system."
            android:textAlignment="viewStart"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textF4" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>