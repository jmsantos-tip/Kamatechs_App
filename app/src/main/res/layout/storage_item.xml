<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:backgroundTint="@color/colorOff"
    app:cardCornerRadius="10dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginVertical="16dp"
        android:layout_marginStart="24dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:fontFamily="@font/raleway_bold"
                android:text="Updated as of:"
                android:textColor="@color/colorAccent"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDateTime"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/colorAccent"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="25dp"
                android:textAlignment="center"
                android:text="2023-4-4 09:09:54"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/dateIcon"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/calendar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/raleway"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="155dp"
                android:layout_marginTop="10dp"
                android:text="View more details >>"
                android:textSize="20sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/raleway_bold"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature:"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tvTemp"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/colorAccent"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:textAlignment="center"
                android:text="34"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/tempIcon"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginStart="0dp"
                app:srcCompat="@drawable/centigrade" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/raleway_bold"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity:"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tvHumid"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/colorAccent"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:textAlignment="center"
                android:text="56"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/humIcon"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginStart="0dp"
                app:srcCompat="@drawable/humidity" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearance.Kamatechs_App.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Temperature:"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tvRoomTemp"
                style="@style/TextAppearance.Kamatechs_App.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="34"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/RoomTempIcon"
                android:layout_width="56dp"
                android:layout_height="40dp"
                android:layout_marginStart="120dp"
                app:srcCompat="@drawable/hottemp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>