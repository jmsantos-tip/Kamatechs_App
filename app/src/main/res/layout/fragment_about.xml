<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AboutFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/gradient_bg"
        android:id="@+id/aboutConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageAbout"
            android:layout_width="173dp"
            android:layout_height="70dp"
            android:layout_marginStart="96dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="96dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_info_24" />

        <TextView
            android:id="@+id/textView"
            style="@style/TextAppearance.Kamatechs_App.Subtitle"
            android:layout_width="118dp"
            android:layout_height="38dp"
            android:layout_marginStart="155dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="138dp"
            android:text="About"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageAbout" />

        <TextView
            android:id="@+id/textAbout"
            android:layout_width="346dp"
            android:layout_height="464dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/raleway"
            android:text="Kamatechs is a mobile application that helps tomato farmers to be informed about the status of the adaptive cooling storage. This will help to know if the storage system reaches its optimal temperature and humidity to maintain the quality and prolong the lifespan of post-harvested tomatoes."
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>