<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StorageDetailsActivity"
    android:background="@drawable/gradient_bg">

    <TextView
        android:id="@+id/textView2"
        style="@style/TextAppearance.Kamatechs_App.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="102dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="96dp"
        android:text="Storage Information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="368dp"
        android:layout_height="525dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="474dp"
            android:layout_marginVertical="30dp"
            android:layout_marginStart="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextAppearance.Kamatechs_App.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="DATE AND TIME"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/dateIcon"
                    android:layout_width="56dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="40dp"
                    app:srcCompat="@drawable/baseline_date_range_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDate"
                    style="@style/TextAppearance.Kamatechs_App.Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:text="04/05/2023 11:47 AM"
                    android:textSize="22sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextAppearance.Kamatechs_App.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="TEMPERATURE (°C)"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/tempIcon"
                    android:layout_width="56dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="13dp"
                    app:srcCompat="@drawable/baseline_device_thermostat_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTemp"
                    style="@style/TextAppearance.Kamatechs_App.Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="85dp"
                    android:text="12"
                    android:textSize="22sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextAppearance.Kamatechs_App.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="HUMIDITY (%)"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/humIcon"
                    android:layout_width="56dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="70dp"
                    app:srcCompat="@drawable/baseline_water_drop_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHumid"
                    style="@style/TextAppearance.Kamatechs_App.Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="85dp"
                    android:text="91"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="92dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextAppearance.Kamatechs_App.Subtitle"
                    android:layout_width="210dp"
                    android:layout_height="86dp"
                    android:layout_marginStart="15dp"
                    android:text="OUTSIDE TEMPERATURE (°C)"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/outTempIcon"
                    android:layout_width="56dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="13dp"
                    app:srcCompat="@drawable/baseline_device_thermostat_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvOutTemp"
                    style="@style/TextAppearance.Kamatechs_App.Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="85dp"
                    android:text="12"
                    android:textSize="22sp" />

            </LinearLayout>


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>