<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StorageDetailsActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/gradient_bg"
        android:id="@+id/detailsConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtSI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="102dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="96dp"
            android:fontFamily="@font/raleway_bold"
            android:text="STORAGE INFORMATION"
            android:textColor="@color/colorAccent"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mat1"
            android:layout_width="368dp"
            android:layout_height="110dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtSI">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="80dp"
                android:layout_marginVertical="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:fontFamily="@font/raleway_bold"
                        android:textColor="@color/colorAccent"
                        android:textSize="24sp"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:text="UPDATED AS OF"
                        android:textAlignment="center"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/dateIcon"
                        android:layout_width="56dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="0dp"
                        app:srcCompat="@drawable/calendar" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDateTime"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/colorAccent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:text="2023-4-4 09:09:50"
                        android:textSize="24sp" />

                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mat2"
            android:layout_width="368dp"
            android:layout_height="340dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mat1">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="300dp"
                android:layout_marginVertical="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:fontFamily="@font/raleway_bold"
                        android:textColor="@color/colorAccent"
                        android:textSize="24sp"
                        android:layout_width="270dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="0dp"
                        android:text="ROOM TEMPERATURE (°C)"
                        android:textAlignment="center"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/outTempIcon"
                        android:layout_width="56dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="0dp"
                        app:srcCompat="@drawable/hottemp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvRoomTemp"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/colorAccent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="85dp"
                        android:text="12"
                        android:textSize="24sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:fontFamily="@font/raleway_bold"
                        android:textColor="@color/colorAccent"
                        android:textSize="24sp"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:text="TEMPERATURE (°C)"
                        android:textAlignment="center"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/tempIcon"
                        android:layout_width="56dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="0dp"
                        app:srcCompat="@drawable/centigrade" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTemp"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/colorAccent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="85dp"
                        android:text="12"
                        android:textSize="24sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:fontFamily="@font/raleway_bold"
                        android:textColor="@color/colorAccent"
                        android:textSize="24sp"
                        android:layout_width="265dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:text="HUMIDITY (%)"
                        android:textAlignment="center"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/humIcon"
                        android:layout_width="56dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="0dp"
                        app:srcCompat="@drawable/humidity" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvHumid"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/colorAccent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="85dp"
                        android:text="91"
                        android:textSize="24sp" />

                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:keepScreenOn="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/bottom_nav"
            app:labelVisibilityMode="selected"
            style="@style/Widget.App.BottomNavigationView"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>